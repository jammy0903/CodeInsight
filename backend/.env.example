# ========================================
# COSLAB Backend Environment Variables
# ========================================
# Copy this file to .env and fill in your values

# === Server ===
PORT=3002
NODE_ENV=development

# === CORS (comma-separated origins) ===
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# === Docker C Execution ===
DOCKER_IMAGE=gcc:latest
DOCKER_MEMORY_LIMIT=128m
DOCKER_CPU_LIMIT=0.5
DOCKER_PID_LIMIT=50
DOCKER_TMPFS_SIZE=10m

# === C Execution Timeouts (seconds) ===
C_RUN_DEFAULT_TIMEOUT=10
C_RUN_MAX_TIMEOUT=30
C_JUDGE_TIMEOUT=5
C_EXECUTOR_BUFFER_SIZE=10485760

# === Code Limits ===
CODE_MAX_LENGTH=50000
JSON_BODY_LIMIT=1mb

# === External APIs (optional) ===
# XAI_API_KEY=your-xai-api-key
# XAI_API_URL=https://api.x.ai/v1/chat/completions

# === DeepSeek AI (Java Tutor) ===
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# === Ollama (Local LLM) ===
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5-coder:7b

# === Telegram Bot ===
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# === Scheduler ===
DAILY_PROBLEM_CRON="0 9 * * *"
TIMEZONE=Asia/Seoul
